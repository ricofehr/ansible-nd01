<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Restart gitlab service stack</description>
  <keepDependencies>false</keepDependencies>
  <properties/>
  <scm class="hudson.scm.NullSCM"/>
  <canRoam>true</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers/>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>#!/bin/bash

SOPFOLDER=&quot;/home/repos/nextdeploy-sop&quot;
RET=0

if [[ $GITLABRECONFIGURE = &quot;true&quot; ]]; then
	pushd $SOPFOLDER &gt;/dev/null
	./sop -c gitlabreconfigure
	RET=$?
	popd &gt;/dev/null
elif [[ $RESTARTGITLAB = &quot;true&quot; ]]; then
	pushd $SOPFOLDER &gt;/dev/null
	./sop -c restartgitlab
	RET=$?
	popd &gt;/dev/null
else
	exit 0
fi

exit $RET</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.plugins.parameterizedtrigger.BuildTrigger plugin="parameterized-trigger@2.29">
      <configs>
        <hudson.plugins.parameterizedtrigger.BuildTriggerConfig>
          <configs>
            <hudson.plugins.parameterizedtrigger.CurrentBuildParameters/>
          </configs>
          <projects>deploy14-restartnginx</projects>
          <condition>SUCCESS</condition>
          <triggerWithNoParameters>false</triggerWithNoParameters>
        </hudson.plugins.parameterizedtrigger.BuildTriggerConfig>
      </configs>
    </hudson.plugins.parameterizedtrigger.BuildTrigger>
  </publishers>
  <buildWrappers>
    <hudson.plugins.ansicolor.AnsiColorBuildWrapper plugin="ansicolor@0.4.1">
      <colorMapName>xterm</colorMapName>
    </hudson.plugins.ansicolor.AnsiColorBuildWrapper>
  </buildWrappers>
</project>